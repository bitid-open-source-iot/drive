{
    "production":       false,
    "authentication":   false,
    "auth": {
        "host":     "http://127.0.0.1:9000/auth/auth",
        "token":    "xxx",
        "email":    "xxx@xxx.co.za",
        "appId":    "xxx"
    },
    "localwebserver": {
        "port": 12000
    },
    "mongodb": {
        "url":      "xxx",
        "database": "xxx"
    },
    "logger": {
        "appenders": {
            "drive": {
                "type":         "file",
                "backups":      10,
                "filename":     "./logs/drive.log",
                "absolute":     true,
                "maxLogSize":   102400
            }
        },
        "categories": {
            "default": {
                "appenders": [
                    "drive"
                ],
                "level": "error"
            }
        }
    }
}